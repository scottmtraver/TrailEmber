<table class='rt-sponsor-list ui celled striped table'>
  <thead>
    <tr>
      <th>Sponsor</th>
      <th>Logo</th>
      <th>Link</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |sponsor|}}
    <tr class='rt-sponsor-row'>
      <td class='rt-sponsor-name'>{{sponsor.name}}</td>
      <td class='rt-sponsor-logo center aligned collapsing'><img src={{sponsor.imageUrl}} alt ="Sponsor Logo" class="ui tiny image" /></td>
      <td class='rt-sponsor-link'><a href={{sponsor.linkUrl}} target="_blank">{{sponsor.linkUrl}}</a></td>
      <td class='rt-sponsor-edit'>{{link-to "Edit" "sponsors.edit" sponsor}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>
